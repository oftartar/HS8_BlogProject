@model CreateGenreDTO

@{
	ViewData["Title"] = "Create Genre";
}

<div class="col-md-12">
	<div class="card card-primary">
		<div class="card-header">
			<h3 class="card-title">Create Genre</h3>
		</div>
		<form asp-action="Create" method="post">
			<div class="card-body">
				<span asp-validation-for="Name" class="text-danger"></span>
				<div class="form-group">
					<label asp-for="Name">Genre Name</label>
					<input asp-for="Name" class="form-control" placeholder="Genre Name" />
				</div>
			</div>
			<div class="card-footer">
				<a asp-action="Index" class="btn btn-primary btn-sm float-end mr-2">Back to Genre List</a>
				<input type="submit" class="btn btn-success btn-sm float-end mr-2" value="Create Genre" />
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}