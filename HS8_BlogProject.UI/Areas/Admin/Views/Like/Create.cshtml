@model CreateLikeDTO

@{
    ViewData["Title"] = "Create Like";
}

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create Like</h3>
        </div>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <span asp-validation-for="PostId" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="PostId">Post</label>
                    <select asp-for="PostId" class="custom-select" asp-items="@(new SelectList(Model.Posts,"Id","Title"))">
                    </select>
                </div>
                <span asp-validation-for="AppUserId" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="AppUserId">Username</label>
                    <select asp-for="AppUserId" class="custom-select" asp-items="@(new SelectList(Model.AppUsers,"Id","UserName"))">
                    </select>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-primary btn-sm float-end mr-2">Back to Like List</a>
                <input type="submit" class="btn btn-success btn-sm float-end mr-2" value="Create Like" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}