@model LoginDTO

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Blog Login</title>

	<!-- Google Font: Source Sans Pro -->
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
	<!-- Font Awesome -->
	<link rel="stylesheet" href="~/media/css/all.min.css">
	<!-- icheck bootstrap -->
	<link rel="stylesheet" href="~/media/css/icheck-bootstrap.min.css">
	<!-- Theme style -->
	<link rel="stylesheet" href="~/media/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
	<div class="login-box">
		<div class="card card-outline card-primary">
			<div class="card-header text-center">
				<a asp-action="Login" class="h1"><b>Blog</b> App</a>
			</div>
			<div class="card-body">
				<p class="login-box-msg">Login Page</p>
				<form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
					<span asp-validation-for="UserName" class="text-danger"></span>
					<div class="input-group mb-3">
						<input asp-for="UserName" type="text" class="form-control" placeholder="User Name">
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="fas fa-user"></span>
							</div>
						</div>
					</div>
					<span asp-validation-for="Password" class="text-danger"></span>
					<div class="input-group mb-3">
						<input asp-for="Password" type="password" class="form-control" placeholder="Password">
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="fas fa-lock"></span>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-6">
							<a asp-action="Register" class="btn btn-primary btn-block">Register</a>
						</div>
						<!-- /.col -->
						<div class="col-6">
							<input type="submit" class="btn btn-success btn-block" value="Login" />
						</div>
						<!-- /.col -->
					</div>
				</form>
			</div>
			<!-- /.form-box -->
		</div><!-- /.card -->
	</div>
	<!-- /.register-box -->
	<!-- jQuery -->
	<script src="~/media/js/jquery.min.js"></script>
	<!-- Bootstrap 4 -->
	<script src="~/media/js/bootstrap.bundle.min.js"></script>
	<!-- AdminLTE App -->
	<script src="~/media/js/adminlte.min.js"></script>
</body>
</html>
